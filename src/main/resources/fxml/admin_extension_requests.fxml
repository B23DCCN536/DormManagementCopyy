<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dorm.controller.QuanLyYeuCauGiaHanController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label styleClass="header-label" text="Yêu cầu gia hạn">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchField" prefHeight="30.0" prefWidth="300.0" promptText="Tìm kiếm theo mã SV..." />
                  <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleApprove" styleClass="button" style="-fx-background-color: #2ecc71;" text="Duyệt" />
                        <Button mnemonicParsing="false" onAction="#handleReject" styleClass="button" style="-fx-background-color: #e74c3c;" text="Từ chối" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView fx:id="requestsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idCol" prefWidth="80.0" text="Mã YC" />
                <TableColumn fx:id="studentIdCol" prefWidth="100.0" text="Mã SV" />
                  <TableColumn fx:id="contractIdCol" prefWidth="100.0" text="Mã HĐ" />
                  <TableColumn fx:id="monthsCol" prefWidth="80.0" text="Số tháng" />
                  <TableColumn fx:id="amountCol" prefWidth="120.0" text="Tổng tiền" />
                  <TableColumn fx:id="dateCol" prefWidth="120.0" text="Ngày gửi" />
                  <TableColumn fx:id="statusCol" prefWidth="120.0" text="Trạng thái" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
