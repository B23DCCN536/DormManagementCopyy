<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dorm.controller.DoiMatKhauController">
   <children>
      <VBox alignment="CENTER" layoutX="150.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Đổi Mật Khẩu">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <VBox spacing="5.0">
               <children>
                  <Label text="Mật khẩu cũ" />
                  <PasswordField fx:id="oldPasswordField" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Mật khẩu mới" />
                  <PasswordField fx:id="newPasswordField" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Xác nhận mật khẩu mới" />
                  <PasswordField fx:id="confirmPasswordField" />
               </children>
            </VBox>
            <Label fx:id="errorLabel" textFill="RED" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#handleChangePassword" prefWidth="200.0" styleClass="button" text="Đổi Mật Khẩu" />
         </children>
      </VBox>
   </children>
</AnchorPane>