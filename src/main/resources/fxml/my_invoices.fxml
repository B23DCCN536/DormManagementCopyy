<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dorm.controller.HoaDonCuaToiController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Danh sách hóa đơn">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TableView fx:id="invoicesTable" prefHeight="400.0" prefWidth="1000.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="invoiceIdCol" prefWidth="100.0" text="Mã hóa đơn" />
                <TableColumn fx:id="roomCol" prefWidth="80.0" text="Mã phòng" />
                <TableColumn fx:id="contentCol" prefWidth="100.0" text="Tháng/Năm" />
                <TableColumn fx:id="dateCol" prefWidth="100.0" text="Ngày lập" />
                <TableColumn fx:id="electricityCol" prefWidth="100.0" text="Tiền điện" />
                <TableColumn fx:id="waterCol" prefWidth="100.0" text="Tiền nước" />
                <TableColumn fx:id="amountCol" prefWidth="120.0" text="Tổng tiền" />
                <TableColumn fx:id="statusCol" prefWidth="100.0" text="Trạng thái" />
                <TableColumn fx:id="paymentDateCol" prefWidth="100.0" text="Ngày đóng" />
                <TableColumn fx:id="payerCol" prefWidth="120.0" text="Người nộp" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT">
            <children>
                <javafx.scene.control.Button text="Xuất hóa đơn" onAction="#handleExportInvoice" styleClass="button"/>
            </children>
        </HBox>
    </children>
</VBox>

