<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dorm.controller.QuanLyHoaDonController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label styleClass="header-label" text="Quản lý Hóa Đơn">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchField" prefHeight="30.0" prefWidth="300.0" promptText="Tìm kiếm hóa đơn..." />
               </children>
            </HBox>
            <TableView fx:id="invoicesTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idCol" prefWidth="100.0" text="Mã HĐ" />
                <TableColumn fx:id="roomIdCol" prefWidth="80.0" text="Phòng" />
                <TableColumn fx:id="monthCol" prefWidth="60.0" text="Tháng" />
                <TableColumn fx:id="yearCol" prefWidth="60.0" text="Năm" />
                <TableColumn fx:id="electricCol" prefWidth="100.0" text="Tiền điện" />
                <TableColumn fx:id="waterCol" prefWidth="100.0" text="Tiền nước" />
                <TableColumn fx:id="totalCol" prefWidth="120.0" text="Tổng tiền" />
                <TableColumn fx:id="statusCol" prefWidth="100.0" text="Trạng thái" />
                <TableColumn fx:id="payerCol" prefWidth="100.0" text="Người nộp" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>