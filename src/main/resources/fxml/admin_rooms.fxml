<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dorm.controller.QuanLyPhongController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label styleClass="header-label" text="Quản lý Phòng">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchField" prefHeight="30.0" prefWidth="300.0" promptText="Tìm kiếm phòng..." />
               </children>
            </HBox>
            <TableView fx:id="roomsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idCol" prefWidth="100.0" text="Mã Phòng" />
                <TableColumn fx:id="nameCol" prefWidth="150.0" text="Tên Phòng" />
                  <TableColumn fx:id="buildingCol" prefWidth="100.0" text="Tòa" />
                  <TableColumn fx:id="typeCol" prefWidth="150.0" text="Loại Phòng" />
                  <TableColumn fx:id="occupancyCol" prefWidth="100.0" text="Số người" />
                  <TableColumn fx:id="genderCol" prefWidth="100.0" text="Giới tính" />
                  <TableColumn fx:id="statusCol" prefWidth="120.0" text="Trạng thái" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>