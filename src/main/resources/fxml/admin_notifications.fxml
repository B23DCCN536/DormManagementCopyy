<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dorm.controller.QuanLyThongBaoController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="header-label" text="Quản lý Thông Báo">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="titleField" promptText="Tiêu đề" />
                        <DatePicker fx:id="datePicker" promptText="Ngày đăng" />
                        <TextArea fx:id="contentArea" prefHeight="100.0" promptText="Nội dung thông báo" />
                        <HBox spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleAdd" text="Thêm" />
                              <Button mnemonicParsing="false" onAction="#handleUpdate" text="Sửa" />
                              <Button mnemonicParsing="false" onAction="#handleDelete" text="Xóa" />
                              <Button mnemonicParsing="false" onAction="#handleClear" text="Làm mới" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TableView fx:id="notificationsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idCol" prefWidth="100.0" text="Mã TB" />
                <TableColumn fx:id="titleCol" prefWidth="200.0" text="Tiêu đề" />
                  <TableColumn fx:id="contentCol" prefWidth="300.0" text="Nội dung" />
                  <TableColumn fx:id="dateCol" prefWidth="150.0" text="Ngày đăng" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>